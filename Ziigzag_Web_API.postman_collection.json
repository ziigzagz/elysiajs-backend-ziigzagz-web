    {
      "name": "GraphQL",
      "item": [
        {
          "name": "Get All Users (GraphQL)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/graphql",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"query { users { id username email fullName role status createdAt } }\"\n}"
            }
          }
        },
        {
          "name": "Get User By ID (GraphQL)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/graphql",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"query { user(id: 1) { id username email fullName role status createdAt } }\"\n}"
            }
          }
        },
        {
          "name": "Get Me (GraphQL)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ],
            "url": "{{baseUrl}}/graphql",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"query { me { id username email fullName role status createdAt } }\"\n}"
            }
          }
        }
      ]
    }
  ]
