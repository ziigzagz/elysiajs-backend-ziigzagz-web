						"body": {
							"mode": "raw",
							"raw": "{\n  \"categoryId\": 1,\n  \"title\": \"My Awesome Project\",\n  \"slug\": \"my-awesome-project\",\n  \"description\": \"<p>This is a detailed description of my project.</p>\",\n  \"bannerImage\": \"uploads/showcase/banners/banner.jpg\",\n  \"isPublished\": false,\n  \"status\": \"active\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/showcases",
							"host": ["{{baseUrl}}"],
							"path": ["showcases"]
						}
					}
				},
